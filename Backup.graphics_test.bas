    GRAPHIC INSTAT TO NumericVar
    IF (NumericVar) THEN
        GRAPHIC INKEY$ TO inkeyVar$
        GRAPHIC PRINT inkeyVar$ POS(50)
    END IF

  LOOP



END FUNCTION
