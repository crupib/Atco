FUNCTION PBMAIN () AS LONG

  LOCAL hWin AS DWORD
  LOCAL widthvar AS INTEGER
  LOCAL Heightvar AS INTEGER
  LOCAL inkeyvar AS STRING
  LOCAL NumericVar AS LONG

  GRAPHIC WINDOW "Atco MCU Test",400, 400,600, 400 TO hWin
